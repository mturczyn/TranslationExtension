<UserControl
    x:Class="AddTranslationCore.AddTranslationView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dto="clr-namespace:AddTranslationCore.DTO"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{StaticResource BlackBrush}"
    mc:Ignorable="d">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition Height="2" />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <GridSplitter
                Grid.Row="2"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                HorizontalAlignment="Stretch"
                Background="{StaticResource Gray99Brush}" />
            <Label
                Grid.Row="0"
                Grid.Column="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Content="Translation key"
                FontFamily="Calibri"
                FontSize="18" />
            <TextBox
                Grid.Row="1"
                Grid.Column="0"
                Margin="20"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                AcceptsReturn="True"
                FontFamily="Calibri"
                FontSize="16"
                Text="{Binding TranslationKey, UpdateSourceTrigger=PropertyChanged}"
                TextWrapping="Wrap" />

            <Label
                Grid.Row="0"
                Grid.Column="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Content="Original text"
                FontFamily="Calibri"
                FontSize="18" />
            <TextBox
                Grid.Row="1"
                Grid.Column="1"
                Margin="20"
                AcceptsReturn="True"
                FontFamily="Calibri"
                FontSize="18"
                Text="{Binding OriginalText, UpdateSourceTrigger=PropertyChanged}"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Auto" />
            <Label
                Grid.Row="0"
                Grid.Column="2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                FontFamily="Calibri"
                FontSize="18">
                <UniformGrid Rows="1">
                    <TextBlock Margin="0,10" Text="Translation in" />
                    <ComboBox
                        Margin="10"
                        IsEditable="True"
                        ItemsSource="{Binding AvailableLanguages}" />
                </UniformGrid>
            </Label>
            <TextBox
                Grid.Row="1"
                Grid.Column="2"
                Margin="20"
                AcceptsReturn="True"
                FontFamily="Calibri"
                FontSize="16"
                Text="{Binding TranslationText, UpdateSourceTrigger=PropertyChanged}"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Auto" />

            <DataGrid
                Grid.Row="3"
                Grid.RowSpan="2"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                Margin="20"
                AutoGenerateColumns="False"
                BorderThickness="0"
                ItemsSource="{Binding Translations.View}"
                RowHeaderWidth="0"
                SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="1*" Header="Translation key">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate DataType="{x:Type dto:Translation}">
                                <TextBox
                                    Padding="5"
                                    IsEnabled="False"
                                    Text="{Binding TranslationKey}"
                                    TextWrapping="Wrap" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="2*" Header="Text in main language">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate DataType="{x:Type dto:Translation}">
                                <TextBox
                                    Padding="5"
                                    IsEnabled="False"
                                    Text="{Binding TranslationText}"
                                    TextWrapping="Wrap" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <Grid
                Grid.Row="5"
                Grid.Column="0"
                Grid.ColumnSpan="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button
                    Margin="10,5,5,10"
                    Command="{Binding TestCommand}"
                    Content="OK"
                    FontFamily="Calibri"
                    FontSize="20"
                    IsDefault="True" />
                <Button
                    Grid.Column="1"
                    Margin="5,5,10,10"
                    Content="Cancel"
                    FontFamily="Calibri"
                    FontSize="20"
                    IsCancel="True" />
            </Grid>

            <ListBox
                Grid.RowSpan="10"
                Grid.Column="3"
                ItemsSource="{Binding ProjectReferences}"
                SelectedItem="{Binding SelectedProject}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="0,0,0,5">
                            <TextBlock Text="{Binding ProjectName}" />
                            <TextBlock Foreground="LightGray" Text="{Binding FullPathToProjectFile}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Grid>
</UserControl>
