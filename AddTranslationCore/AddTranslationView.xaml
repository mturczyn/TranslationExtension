<UserControl
    x:Class="AddTranslationCore.AddTranslationView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dto="clr-namespace:AddTranslationCore.DTO"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{StaticResource BlackBrush}"
    mc:Ignorable="d">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <GridSplitter
                Grid.Row="2"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                Height="1"
                HorizontalAlignment="Stretch"
                Background="{StaticResource Gray99Brush}" />

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Text="Translation key" />

            <UniformGrid Grid.Column="1" Rows="1">
                <TextBlock Margin="0,10" Text="Translation in" />
                <ComboBox
                    Margin="10"
                    IsEditable="True"
                    ItemsSource="{Binding AvailableLanguages}" />
            </UniformGrid>

            <TextBox
                Grid.Row="1"
                Grid.Column="0"
                Margin="10"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                AcceptsReturn="True"
                Text="{Binding TranslationKey, UpdateSourceTrigger=PropertyChanged}"
                TextWrapping="Wrap" />

            <TextBox
                Grid.Row="1"
                Grid.Column="1"
                MinHeight="40"
                Margin="0,10,10,10"
                AcceptsReturn="True"
                Text="{Binding TranslationText, UpdateSourceTrigger=PropertyChanged}"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Auto" />

            <TextBlock
                Grid.Row="3"
                FontSize="20"
                FontWeight="SemiBold"
                Text="Similar translations" />
            <DataGrid
                Name="TranslationsDataGrid"
                Grid.Row="4"
                Grid.ColumnSpan="3"
                Margin="20"
                AutoGenerateColumns="False"
                BorderThickness="0"
                ItemsSource="{Binding Translations.View}"
                RowHeaderWidth="0"
                SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="1*" Header="{x:Null}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate DataType="{x:Type dto:Translation}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Button
                                        x:Name="EditButton"
                                        Grid.ColumnSpan="2"
                                        Command="{Binding ElementName=TranslationsDataGrid, Path=DataContext.EditTranslationCommand}"
                                        CommandParameter="{Binding}"
                                        Content="Edit" />
                                    <Button
                                        x:Name="SaveButton"
                                        Command="{Binding ElementName=TranslationsDataGrid, Path=DataContext.SaveTranslationEditCommand}"
                                        CommandParameter="{Binding}"
                                        Content="Save"
                                        Visibility="Collapsed" />
                                    <Button
                                        x:Name="CancelButton"
                                        Grid.Column="1"
                                        Command="{Binding ElementName=TranslationsDataGrid, Path=DataContext.CancelTranslationEditCommand}"
                                        CommandParameter="{Binding}"
                                        Content="Cancel"
                                        Visibility="Collapsed" />
                                </Grid>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding IsUnderEdition}" Value="True">
                                        <Setter TargetName="EditButton" Property="Visibility" Value="Collapsed" />
                                        <Setter TargetName="SaveButton" Property="Visibility" Value="Visible" />
                                        <Setter TargetName="CancelButton" Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="1*" Header="Translation key">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate DataType="{x:Type dto:Translation}">
                                <TextBox
                                    Padding="5"
                                    IsEnabled="{Binding IsUnderEdition}"
                                    Text="{Binding TranslationKey}"
                                    TextWrapping="Wrap" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="2*" Header="Text in main language">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate DataType="{x:Type dto:Translation}">
                                <TextBox
                                    Padding="5"
                                    IsEnabled="{Binding IsUnderEdition}"
                                    Text="{Binding TranslationText}"
                                    TextWrapping="Wrap" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <Button
                Grid.Row="5"
                Margin="10,5,5,10"
                Command="{Binding TestCommand}"
                Content="OK"
                FontSize="20"
                IsDefault="True" />
            <Button
                Grid.Row="5"
                Grid.Column="1"
                Margin="5,5,10,10"
                Content="Cancel"
                FontSize="20"
                IsCancel="True" />

            <ListBox
                Grid.RowSpan="10"
                Grid.Column="3"
                ItemsSource="{Binding ProjectReferences}"
                SelectedItem="{Binding SelectedProject}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="0,0,0,5">
                            <TextBlock Text="{Binding ProjectName}" />
                            <TextBlock Foreground="LightGray" Text="{Binding FullPathToProjectFile}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Grid>
</UserControl>
